<div class="container">
  <p class="alert"><%= notice %></p>
  <% if @programs.any? %>
    <h3>All Programs</h3>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Contact</th>
          <th>Phone</th>
          <th>Cost</th>
          <th>Location</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @programs.each do |program| %>
          <tr>
            <td><%= program.name %></td>
            <td><%= program.contact %></td>
            <td><%= program.phone %></td>
            <td><%= program.cost %></td>
            <td><%= program.location %></td>
            <td><%= link_to 'Show', program, class: 'label label-primary' %></td>
            <td><%= link_to 'Edit', edit_program_path(program), class: 'label label-info' %></td>
            <td><%= link_to 'Destroy', program, class: 'label label-warning', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <h3 class="center">Add a new Program</h3>
  <% end %>
  <hr>
  <%= link_to 'New Program', new_program_path, class: 'btn btn-success' %>
</div>